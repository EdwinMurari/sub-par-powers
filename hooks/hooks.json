{
    "description": "Session cache: prevents redundant file reads, saves web fetches",
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Read|WebFetch",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/context-check.py\""
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Read|WebFetch",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/log-reads.py\"",
                        "timeout": 5
                    }
                ]
            }
        ]
    }
}